@model CandyShop.Models.Transaction

@{
    ViewData["Title"] = "SalesByItem";
}
<p><a asp-action="Index">Back to Main Menu</a></p>
<h2># Units Sold by Item</h2>
<form id='your-range-form' asp-action="SalesByItem">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <p>Starting from:</p>
        <input asp-for="timestamp" class="form-control" />
        <span asp-validation-for="timestamp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <p>Ending on:</p>
        <input asp-for="timestamp" class="form-control" />
        <span asp-validation-for="timestamp" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Go!" class="btn btn-primary" />
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<canvas id="myChart" width="400" height="400"></canvas>
<script>
    var names = @Html.Raw(Json.Serialize(ViewBag.NAMES));
    var sales = @Html.Raw(Json.Serialize(ViewBag.SALES));
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: names,
            datasets: [{
                label: '# Units Sold',
                data: sales,
                backgroundColor: [
                    'rgba(255, 99, 132)',
                    'rgba(54, 162, 235)',
                    'rgba(255, 206, 86)',
                    'rgba(75, 192, 192)',
                    'rgba(153, 102, 255)',
                    'rgba(255, 159, 64)',
                    'rgba(255, 99, 132)',
                    'rgba(54, 162, 235)',
                    'rgba(255, 206, 86)',
                    'rgba(75, 192, 192)',
                    'rgba(153, 102, 255)',
                    'rgba(255, 159, 64)'
                ],
                borderColor: [
                    'rgba(255, 199, 132, 1)',
                    'rgba(54, 252, 235, 1)',
                    'rgba(255, 255, 86, 1)',
                    'rgba(75, 252, 192, 1)',
                    'rgba(153, 202, 255, 1)',
                    'rgba(255, 255, 64, 1)',
                    'rgba(255, 199, 132, 1)',
                    'rgba(54, 252, 235, 1)',
                    'rgba(255, 255, 86, 1)',
                    'rgba(75, 252, 192, 1)',
                    'rgba(153, 202, 255, 1)',
                    'rgba(255, 255, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        min: 0,
                        beginAtZero: true
                    },
                    gridLines: {
                        display: true,
                        color: "rgba(21,99,64,0.2)"
                    }
                }],
                xAxes: [{
                    ticks: {
                        min: 0,
                        beginAtZero: true
                    },
                    gridLines: {
                        display: false
                    }
                }]
            }
        }
    });
</script>