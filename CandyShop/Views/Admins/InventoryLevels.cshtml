@model CandyShop.Models.Admin

@{
    ViewData["Title"] = "InventoryLevels";
}
<style>
    canvas#myChart {
        width: 1000px !important;
        height: 600px !important;
    }
</style>
<p><a asp-action="Index">Back to Main Menu</a></p>
<h1>Inventory</h1>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<canvas id="myChart" width="1000" height="600"></canvas>
<script>
    var names = @Html.Raw(Json.Serialize(ViewBag.NAMES));
    var QTY = @Html.Raw(Json.Serialize(ViewBag.QTY));
    var ctx = document.getElementById('myChart');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: names,
            datasets: [{
                label: '# in Stock',
                data: QTY,
                backgroundColor: [
                    'rgba(255, 99, 132)',
                    'rgba(54, 162, 235)',
                    'rgba(255, 206, 86)',
                    'rgba(75, 192, 192)',
                    'rgba(153, 102, 255)',
                    'rgba(255, 159, 64)',
                    'rgba(255, 99, 132)',
                    'rgba(54, 162, 235)',
                    'rgba(255, 206, 86)',
                    'rgba(75, 192, 192)',
                    'rgba(153, 102, 255)',
                    'rgba(255, 159, 64)'
                ],
                borderColor: [
                    'rgba(255, 199, 132, 1)',
                    'rgba(54, 252, 235, 1)',
                    'rgba(255, 255, 86, 1)',
                    'rgba(75, 252, 192, 1)',
                    'rgba(153, 202, 255, 1)',
                    'rgba(255, 255, 64, 1)',
                    'rgba(255, 199, 132, 1)',
                    'rgba(54, 252, 235, 1)',
                    'rgba(255, 255, 86, 1)',
                    'rgba(75, 252, 192, 1)',
                    'rgba(153, 202, 255, 1)',
                    'rgba(255, 255, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
           
            scales: {
                yAxes: [{
                    ticks: {
                        min: 0,
                        beginAtZero: true
                    },
                    gridLines: {
                        display: true,
                        color: "rgba(21,99,64,0.2)"
                    }
                }],
                xAxes: [{
                    ticks: {
                        autoskip: false,
                        min: 0,
                        beginAtZero: true,
                        maxRotation: 90,
                        minRotation: 90
                    },
                    gridLines: {
                        display: false
                    }
                }]
            }  
        }
    });
</script>
