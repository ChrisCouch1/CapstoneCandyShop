@model IEnumerable<CandyShop.Models.Employee>

@{
    ViewData["Title"] = "EmployeeListView";
}

<h4>Which employee history would you like to view?</h4>

<table class="table table-bordered">
    <thead>
        <tr style="background-color:lightcoral">
            <th>
                Employee
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>            
            <td>
                <a asp-action="EditList" asp-route-id="@item.employeeId">Select</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to Main Page</a>
</div>
