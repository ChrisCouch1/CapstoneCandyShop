@model IEnumerable<CandyShop.Models.Employee>

@{
    ViewData["Title"] = "EmployeeListView";
}

<h1>List of Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Employee
            </th>
            <th>
                Address
            </th>
            <th>
                Phone
            </th>
            <th>
                Clocked In
            </th>
            <th>
                Break Start
            </th>
            <th>
                Break End
            </th>
            <th>
                Clocked Out
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNumber)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.clockIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.breakStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.breakEnd)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.clockOut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.userId">Edit Time</a>
            </td>
        </tr>
}
    </tbody>
</table>
