@model CandyShop.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Time Punch</h1>

<h4>Select times to edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="userId" />
            <input type="hidden" asp-for="IdentityUser" />
            <input type="hidden" asp-for="IdentityUserId" />
            <input type="hidden" asp-for="name" />
            <input type="hidden" asp-for="address" />
            <input type="hidden" asp-for="phoneNumber" />
            <input type="hidden" asp-for="cart" />            
            <div class="form-group">
                <label asp-for="clockIn" class="control-label"></label>
                <input asp-for="clockIn" class="form-control" />
                <span asp-validation-for="clockIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="breakStart" class="control-label"></label>
                <input asp-for="breakStart" class="form-control" />
                <span asp-validation-for="breakStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="breakEnd" class="control-label"></label>
                <input asp-for="breakEnd" class="form-control" />
                <span asp-validation-for="breakEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clockOut" class="control-label"></label>
                <input asp-for="clockOut" class="form-control" />
                <span asp-validation-for="clockOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
