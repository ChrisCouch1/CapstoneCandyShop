@model CandyShop.Models.EmployeeTransactionViewModel
@{
    ViewData["Title"] = "CartList";
}

<h1>Your Cart</h1>


    
                @Html.DisplayNameFor(model => model.employee.name)
<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.transaction.products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.productName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.price)
                </td>
                <td>
                    <a asp-action="ProductDetails" asp-route-id="@product.productId">Product Details</a>
                </td>
                <td>
                    <button><a asp-action="RemoveFromCart" asp-route-id="@product.productId">Remove</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Sub-total : $@Model.transaction.products.Sum(p => p.price)</h2>
